<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.edu.wszib.student.kubalski.lab6_maven.controllers.AddStudentGradeViewController">

    <Text>Add Student Grade</Text>

    <TextField fx:id="gradeTextField" promptText="Enter grade"/>
    <Label fx:id="gradeErrorLabel" textFill="red" visible="false"/>

    <!--  todo: improve UX using picklist picker  -->
    <TextField fx:id="weightTextField" promptText="Enter weight for the grade"/>
    <Label fx:id="weightErrorLabel" textFill="red" visible="false"/>

    <DatePicker fx:id="dateDatePicker" promptText="Select date of the grade"/>
    <Label fx:id="dateErrorLabel" textFill="red" visible="false"/>

    <VBox spacing="10.0">
        <Button text="Save" onAction="#save"/>
        <Button text="Cancel" onAction="#cancel"/>
    </VBox>
</VBox>
